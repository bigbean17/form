<!-- app/views/sessions/new.html.erb -->




<div class="auth-container" >

  <h1>Login</h1>

  <% if flash[:login_error] %>
    <div><%= flash[:login_error] %></div>
  <% end %>


  <%= form_with url:"/login" do |f| %>

    <div class="form-group">
      <%= f.label :username, for: 'login-username' %>
      <%= f.text_field :username, :id => "login-username", :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, for: "login-password" %>
      <%= f.password_field :password, :id => "login-password", :class => "form-control" %>
    </div>

    <div class="auth-item-container">
      <%= f.button "Login" ,:class => "btn btn-primary btn-lg btn-block"%>
    </div>
    <%= link_to "Register", signup_path %>
    

  <% end %>


</div>